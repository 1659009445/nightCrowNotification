<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--原版主题 你必须使用这个才能启动项目-->
    <style name="Theme.Ncn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#fff</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--自定义三方主题 使用该主题无法启动-->
    <style name="Theme.LightStyle" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#fff</item>
    </style>

    <!--custom tab style-->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom dialog theme -->
    <style name="AlarmDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--custom splash screen reference document: https://developer.android.google.cn/develop/ui/views/launch/splash-screen?hl=hr#kotlin-->
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/res_logo_gb_transparent</item>

        <item name="android:windowSplashScreenBrandingImage">@drawable/res_logo_huiiro_copyright
        </item>

        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">800</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.Ncn</item>
    </style>
</resources>